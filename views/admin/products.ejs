<%- include('../includes/head.ejs') %>
    </head>
  
  <body>
      <%- include('../includes/navigation.ejs') %>
      <% if (errorMessage) { %>
        <div class="notification is-danger">
          <p><%= errorMessage %></p>
        </div>
        <% } %>
      <section class="section columns is-multiline">
          <% for (let product of products) { %>
           <div class="column is-one-quarter is-flex">
              <div class="card">
                  <div class="card-image">
                    <figure class="image is-4by3">
                      <img src="/<%= product.imageUrl %>" alt="Placeholder image">
                    </figure>
                  </div>
                  <div class="card-content">
                    <div class="media">
                      <div class="media-left">
                        <figure class="image is-64x64">
                          <img src="/images/<%= product.brand %>-logo.png" alt="Placeholder image">
                        </figure>
                      </div>
                      <div class="media-content">
                        <p class="title is-size-4"><%= product.name %></p>
                        <p class="subtitle is-size-5">Price: $<%= product.price %></p>
                      </div>
                    </div>
                
                    <div class="content">
                        <%= product.description %>
                      <a href="#">#css</a> <a href="#">#responsive</a>
                      <br>
                      <time datetime="2016-1-1">11:09 PM - 1 Jan 2016</time>
                    </div>
                  </div>
                </div>
                
           </div>
          <% }  %> 
      </section>
      <%- include('../includes/pagination.ejs') %>
    <%- include('../includes/end.ejs') %></section>