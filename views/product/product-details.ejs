<%- include('../includes/head.ejs') %>
    </head>
  
  <body>
      <%- include('../includes/navigation.ejs') %>
      <% if (errorMessage) { %>
        <div class="notification is-danger">
          <p><%= errorMessage %></p>
        </div>
        <% } %>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <section class="section columns is-multiline">
          <div class="column is-half">
   
                    <figure class="image is-4by3">
                        <img src="/<%= product.imageUrl %>" alt="Placeholder image">
                    </figure>

          </div>
          <div class="column is-half">
            <div class="card">
                <div class="box">
                    <div class="media">
                        <div class="media-left">
                          <figure class="image is-48x48">
                              <img src="/images/<%= product.brand %>-logo.png" alt="Placeholder image">
                          </figure>
                        </div>
                        <div class="media-content">
                            <p class="is-size-4"><%= product.name %></p>
                            <p class="is-size-5 no-padding-bottom">Price: $<%= product.price %></p>
                            <p class="is-size-5">Available Units: <%= product.availableUnits %></p>
                        </div>
                      </div>
                      <table class="table">
                          <thead>
                            <tr>
                                <th>Specification</th>
                                <th>Description</th>
                            </tr>
                          </thead>
                          <tbody>
                                         <% productSpecs.forEach(spec => { %>
                                          <% if (spec) { %>
                                           <tr>
                                               <td><%= spec[0] %></td>
                                               <td><%= spec[1] %></td>
                                           </tr>
                                           <% } %>
                                          <% }) %>
            
                           
                          </tbody>
                        </table>
                        <div class="card">
                          <footer class="card-footer">
                              <a href="#" class="card-footer-item">Edit</a>
                              <% if (isAdmin) { %>
                                  <a data-productId="<%= product._id %>" 
                                    data-redirect="true" class="card-footer-item delete-btn">Delete</a>
                                   <% } %>
                          </footer>
                        </div>
                </div>
            </div>
           
          </div>
         
      </section>
    <%- include('../includes/end.ejs') %></section>