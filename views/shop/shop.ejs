<%- include('../includes/head.ejs') %>
    </head>
  
  <body>
      <%- include('../includes/navigation.ejs') %>
      <% if (errorMessage) { %>
        <div class="notification is-danger">
          <p><%= errorMessage %></p>
        </div>
        <% } %>
        <% if (isAdmin) { %>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <% } %>
        <section class="hero is-dark">
                <div class="hero-body">
                  <div class="container">
                    <h1 class="title">
                      Shop
                    </h1>
                    <h2 class="subtitle">
                      Categories
                    </h2>
                  </div>
                </div>
              </section>
     <section class="section columns is-multiline">
         <div class="column is-2">
                <aside class="menu box">
                        <p class="menu-label">
                          Brands
                        </p>
                        <ul class="menu-list">
                          <li><a href="/shop/?brand=dell">Dell</a></li>
                          <li><a href="/shop/?brand=hp">Hp</a></li>
                          <li><a href="/shop/?brand=asus">Asus</a></li>
                        </ul>
                      </aside> 
         </div>
         <div class="column is-10 columns is-multiline">
            <% if (products.length !== 0) { %>
              <% for (let product of products) { %>
                <div class="column is-one-fifth is-flex" id="post-<%= product._id %>">
                   <%- include('../product/product.ejs',{product:product})  %>
                </div>
               <% }  %> 
              <% }
              else { %>
                <div class="column is-full has-text-centered">
                    <h1 class="title is-size-3 has-text-centered">No Products Found!</h1>
                </div>
                <% } %>
         
                
         </div>
     </section>
    <%- include('../includes/end.ejs') %>