<%- include('../includes/head.ejs') %>
    </head>
  
  <body>
      <%- include('../includes/navigation.ejs') %>
      <% if (errorMessage) { %>
        <div class="notification is-danger">
          <p><%= errorMessage %></p>
        </div>
        <% } %>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">

          <section class="section">
              <% if (productsInCart > 1) { %>
                <h1 class="title is-size-3 has-text-centered products-count"><%= productsInCart %> items in the cart</h1>
                <% }else { %>
                  <h1 class="title is-size-3 has-text-centered products-count"> <%= productsInCart === 0 ? 'No products Found!' : '1 product found' %></h1>
                  <div class="has-text-centered">
                              <a href="/shop" class="button is-dark">
                                Continue Shopping
                              </a>
                          </div>
              
                   <%}  %>
            
             <section class="section columns is-multiline">
              
                    <div class="column is-one-third">
                      
                    </div>
                    <div class="column is-one-third box">
                      
                          
                        <% for (let product of products) { %>
                             <%- include('../product/cart-product.ejs',{product:product})  %>
                         <% }  %> 
                         <article class="media " >
                           <div class="media-left">
            

                           </div>
                            <div class="media-content">
                              <div class="content">
                                  <p>
                                      Lrem ipsum, dolor sit amet consectetur adipisicing elit.
                                      <br >
                                      
                                
                                    </p>
                              </div>
                            </div>
                            <div class="media-right">
                              
                                    <strong class="is-size-5 has-text-grey-dark" >Subtotal: $<span id="price"><%= price %></span> </strong> 
                                    <br>
                                    <strong class="is-size-5 has-text-grey-dark" >Tax   $<span id="tax"><%= tax %></span> </strong> 
                                    <br>
                                    <strong class="is-size-4" >Total Price:  $<span id="total-price"><%= totalPrice %></span></strong> 
                            </div>
                          </article>
                          <section class="section">
                              <div class="field is-grouped is-grouped-centered">
                                  <div class="control">
                                    <a href="/shop" class="button is-dark is-inverted">Continue Shopping</a>
                                  </div>
                                  <div class="control">
                                    <button class="button is-dark">Proceed to Checkout</button>
                                  </div>
                                </div>
                          </section>
                            
                   </div>

                   <div class="column is-one-third">
     
                   </div> 
             </section>

          </section>
    <%- include('../includes/end.ejs') %>