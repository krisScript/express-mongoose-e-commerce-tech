<%- include('../includes/head.ejs') %>
    </head>
  
  <body>
      <%- include('../includes/navigation.ejs') %>
      <% if (errorMessage) { %>
        <div class="notification is-danger">
          <p><%= errorMessage %></p>
        </div>
        <% } %>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">

          <section class="section">
              <% if (productsInCart > 1) { %>
                <h1 class="title is-size-3 has-text-centered products-count"><%= productsInCart %> items in the cart</h1>
                <% }else { %>
                  <h1 class="title is-size-3 has-text-centered products-count"> <%= productsInCart === 0 ? 'No products Found!' : '1 product found' %></h1>
                  
                   <%}  %>
            
             <section class="section columns is-multiline">
              
                    <div class="column is-one-third">
                      
                    </div>
                    <div class="column is-one-third box">
                        <% for (let product of products) { %>
                             <%- include('../product/cart-product.ejs',{product:product})  %>
                         <% }  %> 
                     
                   </div>

                   <div class="column is-one-third">
     
                   </div>
                
             </section>
            
          </section>
    <%- include('../includes/end.ejs') %>